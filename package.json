{
  "name": "claude-code-terminal",
  "version": "2.0.0",
  "description": "Single-tenant terminal interface with god-mode shell access (Docker deployment)",
  "license": "AGPL-3.0-or-later",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t claude-code-web .",
    "docker:run": "docker run -p 3014:3014 --env-file .env claude-code-web",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@prisma/client": "^6.13.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-pty": "^1.0.0",
    "prisma": "^6.13.0",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
